generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model user {
  id           String   @id @default(cuid())
  kindeId      String   @unique
  email        String   
  given_name   String?
  family_name  String?
  picture      String?  
  created_at   DateTime
}

model message {
  id        String   @id @default(cuid())
  senderId  String
  receiverId String
  text      String
  created_at DateTime
}